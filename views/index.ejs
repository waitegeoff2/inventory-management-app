<html>
    <head>
        <title>Games Inventory</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
       <%- include('partials/header.ejs') %>
       <h2 class="index-title"><%= title %></h2>
        <div class="index-top-buttons">   
        <div class="browse-by-category">
                <a class="btn-link" href="/genres">Browse by Genre</a>
                <a class="btn-link" href="/devs">Browse by Developer</a>
        </div>
        <a class="btn-link" href="/new">Add New Game</a>
       </div>   
       <ul class="games-list">
        <!-- games for each -->
        <% games.forEach((game) => { %>
            <li>
                <div class="game-block">
                    <img class="cover-image" src=<%= game.cover %> alt="Video game cover art">
                    <div class="game-details">
                        <h3> <%= game.name %></h3>
                        <h4><b>Genre(s):
                        <% game.genres.map((genre) => { %>  
                            <%=genre + ', ' %>
                        <% }) %> </b></h4> 
                        <h4><b>Developer(s):
                        <% game.developers.map((genre) => { %>  
                            <%=genre + ', ' %>
                        <% }) %> </b></h4>
                        <div class="game-links">
                            <a class="a-button" id="more-info" href="/games/<%= game.id %>">More info</a>
                            <div class="edit-delete">
                                <a class="a-button" href="/edit/<%= game.id %>">Edit details</a> 
                                <a class="a-button" href="/delete/<%= game.id %>">Delete game</a>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        <% }) %>
       </ul>
    </body>
</html>