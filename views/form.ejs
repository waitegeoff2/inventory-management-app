<!-- Form to add a new game -->
<html>
  <head>
    <title>Game Details</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    <h1 class="form-main-title">New Game Form</h1>
    <%- include("partials/errors.ejs") %>
    <form class="new-game-form" method="POST" action="/new">
      <label for="gameName"><b>Name:</b></label>
      <input type="text" id="gameName" name="gameName" />
      <label for="yearPublished"><b>Year Published:</b></label>
      <input type="number" id="yearPublished" name="yearPublished" />
      <fieldset class="genre-checkbox">
        <legend><b>Select Genre:</b></legend>
        <div class="genre-checkboxes">
            <% genres.forEach((genre) => { %>
                <input type="checkbox" id="<%= genre.id %>" name="genre" value="<%= genre.id %>">
                <label for="<%= genre.id %>"><%= genre.genre %></label>
            <% }) %>
        </div>
      </fieldset>
      <label for="gameDeveloper"><b>Game developer: </b></label>
      <input type="text" id="gameDeveloper" name="gameDeveloper">
      <label for="coverArt"><b>Cover Art (optional): </b></label>
      <input type="text" id="coverArt" name="coverArt">
      <input class="details-btn" type="submit" value="submit" />
    </form>
  </body>
</html>
